<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
		<File fileName="${ctx:location}/SQL.log" name="queries" append="false">
			<PatternLayout>
				<Pattern>%d %-5p [%c{1.}] - %m%n</Pattern>
			</PatternLayout>
		</File>
        <Routing name="MyRoutingAppender">
            <Routes pattern="$${marker:}$${ctx:runId}">
                <Route key="FWK${ctx:runId}">
                    <File fileName="${ctx:location}/${ctx:fwk.code}.log" name="appender-${marker:}" append="false">
                        <PatternLayout>
                            <Pattern>%d %-5p [%c{1.}] - %m%n</Pattern>
                        </PatternLayout>
                    </File>
                </Route>
                <Route key="${marker:}${ctx:runId}">
                    <File fileName="${ctx:location}/${ctx:fwk.code}.log" name="appender" append="false">
                        <PatternLayout>
                            <Pattern>%d %-5p [%c{1.}] - %m%n</Pattern>
                        </PatternLayout>
                    </File>
                </Route>
                <Route>
                    <File fileName="${ctx:location}/${ctx:runId}/script.log" name="appender-${marker:}-${ctx:runId}" append="false">
                        <PatternLayout>
                            <Pattern>%d %-5p [%c{1.}] - %m%n</Pattern>
                        </PatternLayout>
                    </File>
                </Route>
            </Routes>
        </Routing>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%c{1.}] - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="io.metadew.iesi" additivity="false" level="all">
            <AppenderRef ref="STDOUT" level="info" />
            <AppenderRef ref="MyRoutingAppender" level="all" />
        </Logger>
        <Logger name="io.metadew.iesi.connection.database.connection" additivity="false">
            <AppenderRef ref="queries" level="all" />
        </Logger>
        <Root level="warn" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>